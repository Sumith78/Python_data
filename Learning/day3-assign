base=int(input("Enter the base: "))
height =int(input("Enter the height: "))
area = 0.5 * base * height
print(f"The area of the triangle is {int(area)}")



a=int(input("Enter the value of a: "))
b=int(int(input("Enter the value of b: ")))
c=int(int(input("Enter the value of c: ")))
Perimeter = a+b+c
print(Perimeter)











# Prompt the user for the length and width
length = float(input("Enter length: "))
width = float(input("Enter width: "))

# Calculate the area and perimeter
area = length * width
perimeter = 2 * (length + width)

# Display the results
print(f"The area of the rectangle is {int(area)}")
print(f"The perimeter of the rectangle is {int(perimeter)}")
# we use f to avoid using .format(area) and '+str(area) , since print(f" is {}") is the faster approach
